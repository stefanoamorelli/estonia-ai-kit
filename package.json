    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.0.0",
    "jest": "^29.7.0",
    "nx": "21.4.0",
    "prettier": "^3.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.9.2",
    "vitest": "^2.0.0"
  },
  "dependencies": {
